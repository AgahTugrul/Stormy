<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xmlms="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools">
    <data>
        <variable
            name="hour"
            type="com.example.stormy.model.Hour" />
    </data>

    <RelativeLayout
        android:id="@+id/hourly_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:background="@color/cardview_dark_background">

        <TextView
            android:id="@+id/textView_timeLabel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@{String.valueOf(hour.time)}"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:text = "12 PM"
            />

        <ImageView
            android:id="@+id/icon_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView_timeLabel"
            android:layout_toEndOf="@+id/textView_timeLabel"
            xmlms:srcCompat="@drawable/partly_cloudy" />

        <TextView
            android:id="@+id/textView_temperatureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:text="@{String.valueOf(hour.temperature)}"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            tools:text="100"
            />

        <TextView
            android:id="@+id/textView_summaryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView_temperatureLabel"
            android:layout_toEndOf="@id/icon_imageView"
            android:layout_toRightOf="@+id/icon_imageView"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@{String.valueOf(hour.summary)}"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:text="Partly Cloudy" />

    </RelativeLayout>
</layout>